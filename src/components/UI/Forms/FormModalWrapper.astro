---
import Button from "@components/UI/Button.astro";
import Form from "@components/UI/Forms/Form.astro";
---

<dialog id="inquiry-dialog" aria-labelledby="inquiry-dialog-title">
  <div class="card">
    <h2 id="inquiry-dialog-title" class="">Остави запитване</h2>

    <Form {...Astro.props} />

    <Button
      id="close-modal-icon"
      aria={{
        label: "Затвори",
      }}
    />
  </div>
</dialog>

<script>
  import { initInquiryForm } from "@scripts/inquiry-form";
  document.addEventListener("astro:page-load", () => {
    initInquiryForm("inquiry-form");
  });
</script>
