---
import { Image } from "astro:assets";

import Button from "@components/UI/Button.astro";
import SectionHeading from "@components/UI/SectionHeading.astro";
import lastSlideCar from "@images/last-slide-car.webp";

const { href = "/available-cars" } = Astro.props;
---

<article
  class="card relative overflow-hidden justify-between h-full pb-medium xl:p-medium xl:pb-wrapper"
>
  <SectionHeading
    headingLevel="h3"
    style="flex flex-col uppercase leading-none"
  >
    <span>Бързо</span><span>Лесно</span><span>Сигурно</span>
  </SectionHeading>
  <Button
    href={href}
    style="order-last self-stretch w-auto max-w-full p-base capitalize"
  >
    Виж каталога
  </Button>
  <div
    aria-hidden="true"
    class="relative w-[calc(100%+var(--spacing-medium))] -translate-x-[calc(var(--spacing-medium)/2)]"
  >
    <Image alt=" " src={lastSlideCar} />
    <div
      class="absolute top-4/9 h-3/5 w-[calc(100%+var(--spacing-medium))] -z-1 bg-brand -translate-x-[calc(var(--spacing-medium)/2)]"
    >
    </div>
  </div>
</article>
